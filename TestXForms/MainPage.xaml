<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 		
		     xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
		     xmlns:controls="clr-namespace:TestXForms"
		     x:Class="TestXForms.MainPage">
  <ContentPage.ToolbarItems>
    <ToolbarItem Command="{Binding TestCommand}"
                 Icon="ic_insert_dark"
                 Order="Primary"
                 Priority="0" />
  </ContentPage.ToolbarItems>

	<ContentPage.Content>
		<StackLayout>			
			<Label Text="XAMARIN FORMS TEST APP" />
			<Button WidthRequest="100" HeightRequest="50" x:Name="_btnNav" Text="Nav Page" />
			<controls:GridControl  VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" Opacity="0.5"/>
		</StackLayout>
	</ContentPage.Content>
</ContentPage>
